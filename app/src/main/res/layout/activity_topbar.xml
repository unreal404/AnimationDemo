<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <include
            android:id="@+id/include_title"
            layout="@layout/layout_public_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.animationdemo.widget.TopBar
            android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:leftText = "BACK"
            app:leftBackground = "@android:color/holo_blue_bright"
            app:leftTextColor = "#FFFFFF"

            app:titleTextSize = "6sp"
            app:titleTextColor = "@color/color_9"

            app:rightText = "MORE"
            app:rightBackground = "@android:color/holo_blue_bright"
            app:rightTextColor = "#FFFFFF">

        </com.animationdemo.widget.TopBar>


    </LinearLayout>

</layout>